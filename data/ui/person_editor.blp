using Gtk 4.0;
using Adw 1;

template $MusicusPersonEditor: Adw.NavigationPage {
  title: _("Person");

  Adw.ToolbarView {
    [top]
    Adw.HeaderBar header_bar {}

    Adw.Clamp {
      Gtk.Label {
        label: _("Name");
        xalign: 0;
        margin-top: 24;

        styles [
          "heading"
        ]
      }

      $MusicusTranslationEditor name_editor {
        margin-start: 12;
      }
    }
  }
}
