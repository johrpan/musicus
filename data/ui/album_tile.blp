using Gtk 4.0;

template $MusicusAlbumTile: Gtk.FlowBoxChild {
  styles [
    "card",
    "activatable",
    "tile"
  ]

  Gtk.Box {
    valign: center;

    Gtk.Label title_label {
      styles [
        "title"
      ]

      valign: center;
      halign: start;
      lines: 1;
      ellipsize: end;
    }
  }
}
