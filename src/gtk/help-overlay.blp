using Gtk 4.0;

ShortcutsWindow help_overlay {
  modal: true;

  ShortcutsSection {
    section-name: "shortcuts";
    max-height: 10;

    ShortcutsGroup {
      title: "General";

      ShortcutsShortcut {
        title: "Show Shortcuts";
        action-name: "win.show-help-overlay";
      }

      ShortcutsShortcut {
        title: "Quit";
        action-name: "app.quit";
      }
    }
  }
}
